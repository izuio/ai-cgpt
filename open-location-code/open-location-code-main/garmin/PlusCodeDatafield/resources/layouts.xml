        <label id="localcode" x="8" y="75" color="Gfx.COLOR_BLACK" justification="Gfx.TEXT_JUSTIFY_LEFT" font="Gfx.FONT_SMALL" />
    </layout>
    <layout id="BottomLeftLayout">
