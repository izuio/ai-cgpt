<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
      <item name="android:textViewStyle">@style/OlcTextViewStyle</item>
      <item name="android:buttonStyle">@style/OlcButtonStyle</item>
      <item name="android:textSize">@dimen/default_font_size</item>
      <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="OlcTextViewStyle" parent="android:Widget.TextView">
      <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="OlcButtonStyle" parent="android:Widget.Holo.Button">
      <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Welcome text -->
    <style name="TextAppearance.WelcomeText" parent="@android:style/TextAppearance.Medium">
      <item name="android:textColor">@color/welcome_text</item>
      <item name="android:textSize">@dimen/default_font_size</item>
    </style>

    <!-- Welcome title -->
    <style name="TextAppearance.WelcomeTitle" parent="TextAppearance.WelcomeText">
      <item name="android:textAllCaps">true</item>
      <item name="android:gravity">center_horizontal</item>
      <item name="android:fontFamily">sans-serif</item>
      <item name="android:textSize">@dimen/title_font_size</item>
    </style>

    <style name="ButtonAppearance.WelcomeButton" parent="TextAppearance.WelcomeText">
      <item name="android:textAllCaps">true</item>
      <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>
